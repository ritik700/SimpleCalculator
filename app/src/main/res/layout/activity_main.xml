<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainRedBox"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/bigGreenBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#000"
        android:layout_weight="3"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:orientation="horizontal">

       <EditText
           android:id="@+id/editTex"
           android:textColor="#fff"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_weight="14"
           />
        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="X"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/bigBlueBox"
        android:orientation="horizontal"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#000">




        <LinearLayout
            android:id="@+id/blackBox"
            android:layout_weight="18"
            android:orientation="vertical"
            android:background="#000"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/smallGreen"
                android:orientation="horizontal"
                android:background="#000"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">


                <Button
                    android:id="@+id/btnSeven"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/myStyle3"
                    android:layout_margin="2dp"
                    android:text="7"/>


                <Button
                    android:id="@+id/btnEight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/myStyle3"
                    android:layout_margin="2dp"
                    android:text="8"/>


                <Button
                    android:id="@+id/btnNine"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/myStyle3"
                    android:layout_margin="2dp"
                    android:text="9"/>


                <Button
                    android:id="@+id/btnDivide"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    style="@style/myStyle2"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:text="/"/>



            </LinearLayout>
            <LinearLayout
                android:id="@+id/smallGreen1"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:background="#000"
                android:layout_width="match_parent"
                android:layout_height="0dp">


                <Button
                    android:id="@+id/btnFour"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/myStyle3"
                    android:layout_margin="2dp"
                    android:text="4"/>


                <Button
                    android:id="@+id/btnFive"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/myStyle3"
                    android:layout_margin="2dp"
                    android:text="5"/>


                <Button
                    android:id="@+id/btnSix"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/myStyle3"
                    android:layout_margin="2dp"
                    android:text="6"/>


                <Button
                    android:id="@+id/btnMultiply"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/myStyle2"
                    android:layout_margin="2dp"
                    android:text="*"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/blueBox"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:background="#000"
                android:layout_width="match_parent"
                android:layout_height="0dp">


            <LinearLayout
                android:id="@+id/redBox"
                android:orientation="vertical"
                android:layout_weight="4"
                android:background="#000"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/greenBox"
                   android:layout_weight="1"
                    android:background="#000"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <Button
                        android:id="@+id/btnOne"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        style="@style/myStyle3"
                        android:layout_margin="2dp"
                        android:text="1"/>

                    <Button
                        android:id="@+id/btnTwo"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        style="@style/myStyle3"
                        android:layout_margin="2dp"
                        android:text="2"/>

                    <Button
                        android:id="@+id/btnThree"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        style="@style/myStyle3"
                        android:layout_margin="2dp"
                        android:text="3"/>

                    <Button
                        android:id="@+id/btnSubtract"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        style="@style/myStyle2"
                        android:layout_margin="2dp"
                        android:text="-"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/greenBox1"
                    android:layout_weight="1"
                    android:background="#000"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <Button
                        android:id="@+id/btnZero"
                        style="@style/myStyle3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="2"
                        android:text="0" />

                    <Button
                        android:id="@+id/btnDot"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        style="@style/myStyle3"
                        android:layout_margin="2dp"
                        android:text="."/>

                    <Button
                        android:id="@+id/btnAdd"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        style="@style/myStyle2"
                        android:layout_margin="2dp"
                        android:text="+"/>


                </LinearLayout>

            </LinearLayout>
            <Button
                android:id="@+id/btnEqual"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin=".5dp"
                style="@style/myStyle2"

                android:text="="/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>